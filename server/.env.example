# Production Environment Variables
# Copy this file to .env and update with your actual values

# Database Configuration
DB_PASSWORD=your_secure_database_password_here

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-minimum-256-bits-long-for-production

# AWS Configuration (if using AWS services)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1

# Redis Configuration
REDIS_PASSWORD=your_redis_password_here

# Kafka Configuration
KAFKA_SASL_USERNAME=your_kafka_username
KAFKA_SASL_PASSWORD=your_kafka_password

# Email Configuration (for notifications)
EMAIL_FROM=noreply@chatty.com
EMAIL_USERNAME=your_email_username
EMAIL_PASSWORD=your_email_password
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587

# File Storage Configuration
FILE_UPLOAD_DIR=/app/uploads
MAX_FILE_SIZE=10MB

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE_PATH=/app/logs/chatty.log

# Security Configuration
CORS_ALLOWED_ORIGINS=https://yourchattyapp.com
CSRF_ENABLED=true

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=100

# Session Configuration
SESSION_TIMEOUT=30m

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30s
HEALTH_CHECK_TIMEOUT=10s
